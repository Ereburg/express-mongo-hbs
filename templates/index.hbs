<h2>My plans</h2>

{{#if todos.length}}
  <ul>
    {{#each todos}}
      <li class="todo">
        <form action="/complete" method="POST">
          <label>
            <input type="checkbox" {{#if completed}}checked{{else}}{{/if}} name="completed">
            <span {{#if completed}}class="completed"{{else}}{{/if}}>{{title}}</span>
            <input type="hidden" value="{{_id}}" name="id">
            <button class="btn btn-small red darken-1" type="submit">Save</button>
          </label>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>There is no todos!</p>
{{/if}}
